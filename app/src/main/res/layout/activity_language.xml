<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    tools:context=".activites.lang.LanguageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/ivLogoStart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="0dp"
            android:src="@drawable/seyana_logo" />


    </LinearLayout>

    <include
        android:visibility="gone"
        layout="@layout/view_separator"
        >

    </include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:padding="15dp">


        <TextView
            android:id="@+id/tvEn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/lang_settings"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/tvAr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/select_lang_app"
            android:textAlignment="textStart"
            android:textColor="@color/md_grey_700"
            android:textSize="20sp" />






        <Button
            android:id="@+id/btnSelectArabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background1"
            android:clickable="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:text="العربيه"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnSelectEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_background2"
            android:clickable="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:layout_marginBottom="20dp"
            android:text="English"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal" />

    </LinearLayout>




</RelativeLayout>
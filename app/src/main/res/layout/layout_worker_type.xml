<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/tvFree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@color/Orange"
            android:gravity="center"
            android:text="@string/freelancer"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tvCompany"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center"
            android:text=""
            android:textColor="@color/Orange"
            android:textSize="17sp" />
    </LinearLayout>


    <co.ceryle.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/segmentedButtonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:visibility="gone"
        app:sbg_animateSelector="fastOutSlowIn"
        app:sbg_animateSelectorDuration="500"
        app:sbg_backgroundColor="@color/white"
        app:sbg_dividerColor="@color/orange_light_dark"
        app:sbg_dividerPadding="0dp"
        app:sbg_dividerRadius="5dp"
        app:sbg_dividerSize="2dp"
        app:sbg_position="0"
        app:sbg_radius="0dp"
        app:sbg_ripple="false"
        app:sbg_rippleColor="@color/transparent"
        app:sbg_selectorColor="@color/orange_light">

        <co.ceryle.segmentedbutton.SegmentedButton
            android:id="@+id/segmentedBtnFreelancer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="8dp"
            app:sb_text="@string/freelancer"
            app:sb_textColor="@color/md_grey_500"
            app:sb_textColor_onSelection="@color/white" />

        <co.ceryle.segmentedbutton.SegmentedButton
            android:id="@+id/segmentedBtnCompany"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="8dp"
            app:sb_text=""
            app:sb_textColor="@color/md_grey_500"
            app:sb_textColor_onSelection="@color/white" />

        <!--        <co.ceryle.segmentedbutton.SegmentedButton-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="1"-->
        <!--            app:sb_text="Button 3"/>-->
    </co.ceryle.segmentedbutton.SegmentedButtonGroup>



</LinearLayout>